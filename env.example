# Cloud Vault Environment Configuration
# Copy this file to .env on your EC2 instance and update with your actual values
# NEVER commit .env to git (it contains sensitive data)

# ======================
# Database Configuration
# ======================
# Get DB_ENDPOINT from: terraform output db_endpoint
DATABASE_URL=postgresql://filemanager:YOUR_DB_PASSWORD@YOUR_DB_ENDPOINT:5432/filemanager
PGHOST=YOUR_DB_ENDPOINT
PGPORT=5432
PGUSER=filemanager
PGPASSWORD=YOUR_DB_PASSWORD
PGDATABASE=filemanager

# ======================
# AWS Configuration
# ======================
# Get S3_BUCKET from: terraform output s3_bucket
AWS_REGION=us-east-1
S3_BUCKET_NAME=your-bucket-name
DEFAULT_OBJECT_STORAGE_BUCKET_ID=your-bucket-name

# When deployed on EC2 with IAM role, these are not needed
# For local development only:
# AWS_ACCESS_KEY_ID=your-access-key-id
# AWS_SECRET_ACCESS_KEY=your-secret-access-key

# ======================
# Storage Configuration
# ======================
PUBLIC_OBJECT_SEARCH_PATHS=public/
PRIVATE_OBJECT_DIR=private/

# ======================
# Application Configuration
# ======================
NODE_ENV=production
PORT=5000

# Generate with: openssl rand -base64 32
SESSION_SECRET=your-session-secret-here

# ======================
# Optional: Additional Configuration
# ======================
# LOG_LEVEL=info
# MAX_FILE_SIZE=104857600  # 100MB in bytes




